{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "inlineSourceMap":true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "stripInternal": true,
    "pretty": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@/*": [ "src/*" ],
      "@app/*": [ "src/app/*" ],
      "@my_modules/*": [ "src/app/modules/*" ],
      "@my_types/*": [ "src/typings/*" ],
      "@my_foundation/*": [ "src/app/foundation/*" ],
      "@my_migration/*": [ "src/app/foundation/migrations/*" ],
      "@my_console/*": [ "src/console/*" ],
      "@my_decorator/*": [ "src/foundation/decorators/*" ],
    },
    "lib": ["es2017", "dom"],
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "app/public",
    "app/views",
    "dist",
    "node_modules",
    "test"
  ]
}
