{
  "compileOnSave": true,
  "compilerOptions": {
    "alwaysStrict": true,
    "charset": "utf8",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "module": "commonjs",
    "newLine": "lf",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "dist",
    "pretty": true,
    "skipLibCheck": true,
    "strict": true,
    "stripInternal": true,
    "target": "ES2017",
    "baseUrl": "./",
    "typeRoots": [
      "./node_modules/@types",
      "./src/typings"
    ],
    "paths": {
      "@/*": [ "src/*" ],
      "@app/*": [ "src/app/*" ],
      "@my_modules/*": [ "src/app/modules/*" ],
      "@my_types/*": [ "src/typings/*" ],
      "@my_foundation/*": [ "src/app/foundation/*" ],
      "@my_migration/*": [ "src/app/foundation/Migrations/*" ],
      "@my_console/*": [ "src/console/*" ],
      "@my_decorator/*": [ "src/foundation/decorators/*" ]
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "app/public",
    "app/views",
    "dist",
    "node_modules",
    "test",
    "**/*.spec.ts"
  ]
}
